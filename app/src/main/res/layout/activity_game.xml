    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rules"
    tools:context=".GAME">


    <ImageView
        android:id="@+id/sixthImage"
        android:layout_width="67dp"
        android:layout_height="146dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="@+id/guideline25"
        app:layout_constraintTop_toBottomOf="@+id/thirdImage"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/thirdImage"
        android:layout_width="67dp"
        android:layout_height="146dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline25"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/fifthImage"
        android:layout_width="67dp"
        android:layout_height="146dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="@+id/guideline24"
        app:layout_constraintTop_toBottomOf="@+id/secondImage"
        app:srcCompat="@drawable/red" />

    <ImageView
        android:id="@+id/cpuImage6"
        android:layout_width="67dp"
        android:layout_height="146dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
